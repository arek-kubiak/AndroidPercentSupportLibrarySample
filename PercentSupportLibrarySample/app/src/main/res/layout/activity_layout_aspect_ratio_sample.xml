<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!--suppress AndroidDomInspection -->
    <TextView
        android:id="@+id/textView200"
        android:background="@color/colorAccent"
        android:layout_width="100dp"
        app:layout_aspectRatio="200%"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="aspect ratio: 200%"
        android:gravity="center"
        android:textSize="17sp"/>

    <!--suppress AndroidDomInspection -->
    <TextView
        android:id="@+id/textView100"
        android:background="@color/colorAccent"
        android:layout_width="100dp"
        app:layout_aspectRatio="100%"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/textView200"
        android:text="aspect ratio: 100%"
        android:gravity="center"
        android:textSize="17sp" />

    <!--suppress AndroidDomInspection -->
    <TextView
        android:id="@+id/textView50"
        android:background="@color/colorAccent"
        android:layout_width="100dp"
        app:layout_aspectRatio="50%"
        android:layout_toRightOf="@id/textView100"
        android:text="aspect ratio: 50%"
        android:gravity="center"
        android:textSize="17sp"/>

    <!--<View-->
        <!--android:background="@color/colorAccentSecond"-->
        <!--app:layout_widthPercent="50%"-->
        <!--app:layout_aspectRatio="150%" />-->

</android.support.percent.PercentRelativeLayout>
