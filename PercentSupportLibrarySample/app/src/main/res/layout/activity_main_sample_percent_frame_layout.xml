<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--red box-->
    <!--suppress AndroidDomInspection -->
    <View
        app:layout_widthPercent="30%"
        app:layout_heightPercent="30%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="5%"
        app:layout_marginRightPercent="65%"
        app:layout_marginBottomPercent="65%"
        android:background="@color/colorAccent" />

    <!--yellow box-->
    <!--suppress AndroidDomInspection -->
    <View
        app:layout_widthPercent="30%"
        app:layout_heightPercent="30%"
        app:layout_marginLeftPercent="35%"
        app:layout_marginTopPercent="35%"
        app:layout_marginRightPercent="35%"
        app:layout_marginBottomPercent="35%"
        android:background="@color/colorAccentSecond" />

    <!--green box-->
    <!--suppress AndroidDomInspection -->
    <View
        app:layout_widthPercent="30%"
        app:layout_heightPercent="30%"
        app:layout_marginLeftPercent="65%"
        app:layout_marginTopPercent="65%"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        android:background="@color/colorAccentThird" />
</android.support.percent.PercentFrameLayout>