<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--red box-->
    <!--suppress AndroidDomInspection -->
    <View
        android:id="@+id/redBox"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="30%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="5%"
        android:background="@color/colorAccent" />

    <!--yellow box-->
    <!--suppress AndroidDomInspection -->
    <View
        android:id="@+id/yellowBox"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="30%"
        android:layout_below="@id/redBox"
        android:layout_toRightOf="@id/redBox"
        android:background="@color/colorAccentSecond" />

    <!--green box-->
    <!--suppress AndroidDomInspection -->
    <View
        android:id="@+id/greenBox"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="30%"
        android:layout_below="@id/yellowBox"
        android:layout_toRightOf="@id/yellowBox"
        android:background="@color/colorAccentThird" />
</android.support.percent.PercentRelativeLayout>